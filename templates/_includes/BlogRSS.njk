---json
{
  "permalink": "blog/feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Kiwi's Blog Feed",
    "description": "I wonder how many people would follow my blogs using this feed...",
    "language": "en",
    "base": "https://kiwimeowo.neocities.org/"
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/feed.css"?>
<?xml-stylesheet href="feed.css"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
<atom:link href="{{ metadata.base }}{{ permalink }}" rel="self" />
  <title>{{ metadata.title }}</title>
  <link>https://kiwimeowo.neocities.org/blog/index.html</link>
  <description>{{ metadata.description }}</description>
  {%- set ten = collections.blog | reverse %}
  {%- for post in ten | limit(10) %}
  {%- set absolutePostUrl %}{{ post.url | htmlBaseUrl(metadata.base) }}{% endset %}
  <item>
    <title>{{ post.data.title }}</title>
    <link>{{ absolutePostUrl }}</link>
    <guid>{{ absolutePostUrl }}</guid>
    {%- set word = post.content | preview %}
    <description><![CDATA[<h2>{{ post.data.subtitle }}</h2>{{ word | safe }}<p><a href="{{ absolutePostUrl }}">...Continue reading</a></p>]]></description>
    <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
  </item>
  {%- endfor %}
</channel>
</rss>